{% extends 'base.html.twig' %}

{% block body %}
  <div class="wrapper">

    <header class="main-header">
      <a href="{#{{ path('web_dashboard') }}#}#" class="logo">
        <span class="logo-mini"><b>MS</b></span>
        <span class="logo-lg"><b>Mailing</b> Service</span>
      </a>
      <nav class="navbar navbar-static-top">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <li class="dropdown user user-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <img src="{{ asset('build/images/user-placeholder/user2-160x160.jpg') }}" class="user-image" alt="User Image">
                <span class="hidden-xs">{# user.name #}</span>
              </a>
              <ul class="dropdown-menu">
                <li class="user-header">
                  <img src="{{ asset('build/images/user-placeholder/user2-160x160.jpg') }}" class="img-circle" alt="User Image">

                  <p>{# user.email #}</p>
                </li>
                <li class="user-footer">
                  <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">Profile</a>
                  </div>
                  <div class="pull-right">
                    <a href="{#{{ path('web_logout') }}#}#" class="btn btn-default btn-flat">Sign out</a>
                  </div>
                </li>
              </ul>
            </li>
            <li>
              <a href="{{ path('web_logout') }}"><i class="fa fa-sign-out"></i></a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <aside class="main-sidebar">
      <section class="sidebar">
        <div class="user-panel">
          <div class="pull-left image">
            <img src="{{ asset('build/images/user-placeholder/user2-160x160.jpg') }}" class="img-circle" alt="User Image">
          </div>
          <div class="pull-left info">
            <p>{#{{ user.name }}#}</p>
          </div>
        </div>
        <ul class="sidebar-menu" data-widget="tree">
          <li class="header">MAIN NAVIGATION</li>
          <li class="active treeview">
          </li>
        </ul>
      </section>
    </aside>

    <div class="content-wrapper">
      <section class="content-header">
        <h1>
          Dashboard
        </h1>
        <ol class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li class="active">Dashboard</li>
        </ol>
      </section>

      <section class="content">
        {% block content %}{% endblock %}
      </section>
    </div>
    {% include 'footer.html.twig' %}
  </div>
{% endblock %}
